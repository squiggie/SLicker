<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="4dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <slicker.com.slicker.SquareImageView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageViewSquare"
                android:scaleType="centerCrop"
                android:paddingBottom="8dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/buddyIconCard"
                android:layout_below="@id/imageViewSquare"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvUserNameCard"
                android:layout_below="@+id/imageViewSquare"
                android:layout_toRightOf="@+id/buddyIconCard"
                android:layout_alignTop="@id/buddyIconCard"
                android:paddingLeft="8dp"
                android:textColor="@color/colorPrimaryDark"
                tools:text="Landen Melton"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitle"
                android:layout_below="@+id/tvUserNameCard"
                android:layout_alignLeft="@+id/tvUserNameCard"
                android:layout_toRightOf="@+id/buddyIcon"
                android:paddingLeft="8dp"
                android:textColor="@color/colorAccent"
                android:textStyle="italic"
                tools:text="This is a generic title"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewFavorite"
                android:src="@drawable/ic_star_outline"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/buddyIconCard"
                android:layout_below="@+id/imageViewSquare"
                android:tint="#000000"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

